{
  "$defs": {
    "Incident": {
      "description": "An incident contains details and a list of updates associated with it",
      "properties": {
        "status": {
          "$ref": "#/$defs/Status"
        },
        "affectedServices": {
          "title": "Affectedservices",
          "type": "string"
        },
        "summary": {
          "title": "Summary",
          "type": "string"
        },
        "date": {
          "title": "Date",
          "type": "string"
        },
        "updates": {
          "items": {
            "$ref": "#/$defs/Update"
          },
          "minItems": 1,
          "title": "Updates",
          "type": "array"
        }
      },
      "required": [
        "status",
        "affectedServices",
        "summary",
        "date",
        "updates"
      ],
      "title": "Incident",
      "type": "object"
    },
    "Status": {
      "description": "A set of pre-defined statuses for an incident",
      "enum": [
        "down",
        "resolved",
        "degraded",
        "at risk"
      ],
      "title": "Status",
      "type": "string"
    },
    "Update": {
      "description": "An update contains further details and an optional URL for more info",
      "properties": {
        "date": {
          "title": "Date",
          "type": "string"
        },
        "details": {
          "title": "Details",
          "type": "string"
        },
        "url": {
          "anyOf": [
            {
              "format": "uri",
              "maxLength": 2083,
              "minLength": 1,
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Url"
        }
      },
      "required": [
        "date",
        "details"
      ],
      "title": "Update",
      "type": "object"
    }
  },
  "description": "The root of the status page object, containing a list of incidents",
  "items": {
    "$ref": "#/$defs/Incident"
  },
  "title": "StatusPage",
  "type": "array"
}